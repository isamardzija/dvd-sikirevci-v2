---
export interface Props {
	text?: string
	color?: 'light' | 'dark'
	align?: 'left' | 'right' | 'center'
}

const { text, color = 'light', align = 'left' } = Astro.props
let textColor: string
color === 'light' ? (textColor = 'text-zinc-100') : (textColor = 'text-zinc-800')
---

<p class=`font-base text-md lg:text-lg text-${align} ${textColor}`>{text}</p>
