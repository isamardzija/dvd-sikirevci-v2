---
export interface Props {
    text: string
    color?: 'light' | 'dark'
    align?: 'left' | 'right' | 'center'
}

const { text, color = 'light', align = 'center' } = Astro.props
let textColor: string
color === 'light' ? (textColor = 'text-zinc-100') : (textColor = 'text-zinc-800')
---

<h2
    set:html={text}
    class=`py-3 text-${align} font-base text-3xl font-bold lg:text-4xl ${textColor}`
/>
